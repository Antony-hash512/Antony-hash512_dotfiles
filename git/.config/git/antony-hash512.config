[color]
    ui = auto

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    # –í–∫–ª—é—á–∏—Ç—å –±–æ–∫ –æ –±–æ–∫ –≤–∏–¥
    side-by-side = true
    # –ü–æ–∫–∞–∑—ã–≤–∞—Ç—å –Ω–æ–º–µ—Ä–∞ —Å—Ç—Ä–æ–∫
    line-numbers = true
    # –ü–æ–¥—Å–≤–µ—Ç–∫–∞ —Å–∏–Ω—Ç–∞–∫—Å–∏—Å–∞
    syntax-theme = "Monokai Extended"
[diff]
	tool = meld
	#tool = vimdiff
	#tool = nvimdiff
[difftool]
	prompt = false
[alias]
	mv2nb = "!f() { \
        if [ -z \"$1\" ]; then \
            echo '‚ùå –£–∫–∞–∂–∏ –∏–º—è –Ω–æ–≤–æ–π –≤–µ—Ç–∫–∏: git mv2nb –∏–º—è_–≤–µ—Ç–∫–∏'; \
            exit 1; \
        fi; \
        msg=\"stash-before-switch-$(date +%Y%m%d-%H%M%S)\"; \
        echo \"üì¶ –°–æ—Ö—Ä–∞–Ω—è–µ–º –Ω–µ–∑–∞–∫–æ–º–º–∏—á–µ–Ω–Ω—ã–µ –∏–∑–º–µ–Ω–µ–Ω–∏—è –≤ stash: $msg\"; \
        git stash push -m \"$msg\" && \
        echo \"üåø –°–æ–∑–¥–∞—ë–º –∏ –ø–µ—Ä–µ–∫–ª—é—á–∞–µ–º—Å—è –Ω–∞ –≤–µ—Ç–∫—É: $1\"; \
        git switch -c \"$1\" && \
        echo \"üéØ –í–æ–∑–≤—Ä–∞—â–∞–µ–º –∏–∑–º–µ–Ω–µ–Ω–∏—è –∏–∑ stash\"; \
        git stash pop; \
    }; f"
    
	fetch-all = "!f() { args=\"\"; for b in \"$@\"; do args=\"$args HEAD:$b\"; done; git fetch . $args; }; f"
	fetch-upload-all = "!f() { for b in \"$@\"; do git fetch . HEAD:$b && git push origin $b; done; }; f"

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
